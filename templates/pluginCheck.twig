{% extends 'admin.twig' %}

{% block content %}
    <div class="piwik-content-intro">
        <h2 class="ng-isolate-scope">
            {{ 'PerformanceAudit_PluginCheck'|translate }}
        </h2>
    </div>

    <div class="pluginsManagement card ng-isolate-scope">
        <div class="card-content">
            {% if error %}
                <div class="alert alert-warning no-margin-bottom">
                    {{ 'PerformanceAudit_PluginCheckAlertSystemIssue'|translate }}
                    <br />
                    {{ error }}
                </div>
            {% else %}
                <div class="alert alert-success">
                    {{ 'PerformanceAudit_PluginCheckAlertNoSystemIssues'|translate }}
                </div>

                <div class="ng-isolate-scope">
                    <a href="?{{ checkStartUrl }}" class="btn" ng-click="toggle = true" ng-class="{ linkDisabled: toggle }">
                        <span ng-show="toggle">{{ 'PerformanceAudit_PluginCheckStartButtonClicked'|translate }}</span>
                        <span ng-hide="toggle">{{ 'PerformanceAudit_PluginCheckStartButton'|translate }}</span>
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
